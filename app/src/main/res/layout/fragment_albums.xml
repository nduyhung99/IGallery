<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/layoutProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <ProgressBar
                style="@style/AppCompatAlertDialogStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/button" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/nesAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_42sdp"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/layoutMainAlbums"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolbarAlbums"
                    layout="@layout/albums_toolbar"
                    tools:ignore="DuplicateIds,InvalidId" />
            <com.ldt.springback.view.SpringBackLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <RelativeLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_14sdp"
                            android:text="@string/my_album"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSeeAllAlbum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:text="@string/see_all"
                            android:textColor="#0B8BF4"
                            android:textSize="@dimen/_14sdp" />
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvAlbums"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_below="@+id/toolbarAlbums"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/utilities"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_14sdp"
                            android:textSize="@dimen/_16sdp"/>
                        <RelativeLayout
                            android:id="@+id/tiPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/icPhoto"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:src="@drawable/ic_photo"
                                app:tint="@color/button" />
                            <TextView
                                android:id="@+id/txtPhoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/_14sdp"
                                android:layout_toRightOf="@+id/icPhoto"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:textColor="@color/button"
                                android:text="@string/photos"/>
                            <TextView
                                android:id="@+id/txtCountPhoto"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/imgEnter"/>
                            <ImageView
                                android:id="@+id/imgEnter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/gray4"
                                android:layout_alignParentBottom="true"
                                android:layout_toEndOf="@+id/icPhoto"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/tiVideo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/icVideo"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:src="@drawable/ic_video"
                                app:tint="@color/button" />

                            <TextView
                                android:id="@+id/txtVideo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:layout_toRightOf="@+id/icVideo"
                                android:text="@string/video"
                                android:textColor="@color/button"
                                android:textSize="@dimen/_14sdp" />
                            <TextView
                                android:id="@+id/txtCountVideo"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/imgEnter3"/>
                            <ImageView
                                android:id="@+id/imgEnter3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/gray4"
                                android:layout_alignParentBottom="true"
                                android:layout_toEndOf="@+id/icVideo"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/tiXoa"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/icBin"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_13sdp"
                                android:src="@drawable/ic_bin"
                                app:tint="@color/button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:layout_toRightOf="@+id/icBin"
                                android:text="@string/recently_deleted"
                                android:textColor="@color/button"
                                android:textSize="@dimen/_14sdp" />
                            <TextView
                                android:id="@+id/txtCountXoa"
                                android:text="0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/imgEnter2"/>
                            <ImageView
                                android:id="@+id/imgEnter2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toEndOf="@+id/icBin"
                                android:background="@color/gray4" />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"/>
                    </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </com.ldt.springback.view.SpringBackLayout>
            </LinearLayout>
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutAllAlbums"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_42sdp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/toolbarAlbums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:visibility="visible">
            <ImageView
                android:id="@+id/clickNewAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:visibility="gone"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:id="@+id/clickBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:visibility="visible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_albums"
                    android:textColor="#0b8bf4"
                    android:textSize="@dimen/_14sdp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtTitleBin"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_album"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_18sdp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/clickEdit"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textColor="#0b8bf4"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_14sdp"/>
            <TextView
                android:id="@+id/clickDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/done"
                android:textStyle="bold"
                android:textColor="#0b8bf4"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarAlbums"/>
    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/layoutItemInAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/layoutAllItemInAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <RelativeLayout
                android:id="@+id/toolbarMyAlbums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:visibility="visible">
                <RelativeLayout
                    android:id="@+id/clickBackMyAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/clickBackMyAlbum1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_back"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_album"
                            android:textColor="#0b8bf4"
                            android:textSize="@dimen/_14sdp"/>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_album"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/_16sdp"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/txtSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_select_button_1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/select1"
                    android:textColor="@color/button"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/_24sdp"/>
                <ImageView
                    android:id="@+id/imgMenuPopup"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_select_button_1"
                    android:src="@drawable/ic_popup_menu"
                    android:visibility="visible"
                    android:padding="@dimen/_4sdp"
                    app:tint="@color/button" />
                <TextView
                    android:id="@+id/txtAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_select_button_1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/add"
                    android:textColor="@color/button"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/cancel1"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:background="@drawable/shape_select_button_1"
                    android:textColor="@color/button"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtSelectAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_all"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:background="@drawable/shape_select_button_1"
                    android:textColor="@color/button"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="gone"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvItemInAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-1dp"
                android:layout_below="@id/toolbarMyAlbums"
                android:layout_above="@id/txtCountItem"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/txtNoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbarMyAlbums"
                android:layout_above="@id/txtCountItem"
                android:text="@string/no_photo_or_video"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:paddingBottom="@dimen/_30sdp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtCountItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/layoutBottomSelectItem"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_4sdp"
                android:text="3 items"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"/>
            <include
                android:id="@+id/layoutBottomSelectItem"
                layout="@layout/layout_bottom_select_item"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layoutContainerItemSelected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <TextView
                android:id="@+id/txtTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/layoutToolbarItem"/>
            <LinearLayout
                android:id="@+id/layoutToolbarItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/clickBackSelected"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_back"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/dateAdded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27/08/2021"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:textSize="@dimen/_14sdp"
                            android:maxLines="2"
                            android:layout_marginLeft="@dimen/_3sdp" />
                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:text="dasfasg"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/clickEdit1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Edit"
                        android:textStyle="bold"
                        android:textColor="#0b8bf4"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="invisible"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#946C6B6B"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layoutToolbarItem"
                android:layout_above="@+id/littleRcv"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/littleRcv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/layoutBottomSelectItemBlue"/>
            <include
                android:id="@+id/layoutBottomSelectItemBlue"
                layout="@layout/layout_bottom_select_item_blue"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>