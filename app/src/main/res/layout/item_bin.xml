<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:layout_margin="@dimen/_1sdp"
    android:id="@+id/layoutItemBin">
    <ImageView
        android:id="@+id/imageItemBin"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_height="@dimen/_60sdp"/>
    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="@dimen/_2sdp"/>
    <TextView
        android:id="@+id/countDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15 days"
        android:textColor="@color/white"
        android:background="@drawable/gradient_item_bin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>
    <RelativeLayout
        android:id="@+id/itemBinSelected"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:alpha="0.4"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_checked"
            android:src="@drawable/ic_checked"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:visibility="visible"/>
    </RelativeLayout>
</RelativeLayout>