<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:gravity="center_horizontal"
    android:id="@+id/layoutButket"
    android:layout_gravity="center_horizontal">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/layoutItem"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_4sdp">
            <ImageView
                android:id="@+id/imageButket"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_delete_album"
                android:layout_height="@dimen/_134sdp"/>
            <RelativeLayout
                android:id="@+id/layoutEmptyFavorite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_134sdp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_134sdp"
                    android:src="@drawable/ic_favorite_lol"
                    android:padding="@dimen/_30sdp"
                    android:background="@color/gray3"/>

            </RelativeLayout>
            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_favorite_1"
                android:layout_gravity="bottom"
                app:tint="@color/white"
                android:padding="@dimen/_2sdp"
                android:visibility="gone"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/folderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="document"
            android:textSize="@dimen/_12sdp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/countItemInFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imgGray"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_134sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/gray3"
        android:visibility="gone"
        android:alpha="0.4"/>

    <ImageView
        android:id="@+id/imgDeleteAlbum"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_delete_album"
        android:visibility="gone"/>


</RelativeLayout>