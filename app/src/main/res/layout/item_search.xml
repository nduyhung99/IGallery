<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutEnter"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_2sdp"
        android:padding="@dimen/_4sdp">
        <ImageView
            android:id="@+id/imgTitle"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_toRightOf="@id/cardContainImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_toLeftOf="@+id/lol">
        <TextView
            android:id="@+id/txtTitleSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:text="camera"/>
        <TextView
            android:id="@+id/txtDateImageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:text="11/1/1111"
            android:layout_marginLeft="@dimen/_4sdp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lol"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp">
        <TextView
            android:id="@+id/txtCountItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_4sdp"
            android:textSize="@dimen/_12sdp"/>
        <ImageView
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_marginRight="@dimen/_6sdp"/>
    </LinearLayout>
</RelativeLayout>